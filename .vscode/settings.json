{
  "files.associations": {
    ".eslintrc": "jsonc",
    ".prettierrc": "jsonc",
    ".eslintignore": "ignore"
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    "typescriptreact"
  ],

  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    ".erb/dll": true,
    "release/{build,app/dist}": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "package-lock.json": true,
    "*.{css,sass,scss}.d.ts": true
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#061fae",
    "activityBar.background": "#061fae",
    "sash.hoverBorder": "#061fae",
    "statusBar.background": "#04167d",
    "statusBarItem.hoverBackground": "#061fae",
    "statusBarItem.remoteBackground": "#04167d",
    "titleBar.activeBackground": "#04167d",
    "titleBar.inactiveBackground": "#04167d99",
    "editorGroup.border": "#061fae",
    "panel.border": "#061fae",
    "sideBar.border": "#061fae",
    "statusBar.border": "#04167d",
    "statusBar.debuggingBackground": "#7d6b04",
    "statusBar.debuggingBorder": "#7d6b04",
    "tab.activeBorder": "#061fae",
    "titleBar.border": "#04167d"
  }
}
